
&НаСервере
Процедура ПриСозданииНаСервере(Отказ, СтандартнаяОбработка)
	Параметры.Свойство("Значение",ЗначениеВвода);
	Если Параметры.Свойство("Подсказка") Тогда
		Заголовок = Параметры.Подсказка;
		АвтоЗаголовок = Ложь;
	КонецЕсли;
	Если Параметры.Свойство("Тип") Тогда
		Элементы.ЗначениеВвода.ОграничениеТипа = Параметры.Тип;
	КонецЕсли;
КонецПроцедуры

