		И ТекДанные.ВидОплатыОрг + ТекДанные.КоличествоДнейПросрочки*86400<ТекДанные.ДатаПлатежа Тогда
		СуммаП = ТекДанные.СтавкаПени*ТекДанные.СуммаДляРасчета/100;
	ИначеЕсли ТекДанные.СпособНачисленияПени = Перечисления.дог_СпособыНачисленияПени.ФиксированнойСуммойЗаКаждыйДеньПросрочки 
		И ТекДанные.ВидОплатыОрг + ТекДанные.КоличествоДнейПросрочки*86400<ТекДанные.ДатаПлатежа Тогда
		ДниПросрочки = (ТекДанные.ДатаПлатежа - (ТекДанные.ВидОплатыОрг + ТекДанные.КоличествоДнейПросрочки*86400))/86400;
		СуммаП = ТекДанные.СтавкаПени*Мин(ТекДанные.КоличествоДнейНачисленияПени,ДниПросрочки);	
	ИначеЕсли ТекДанные.СпособНачисленияПени = Перечисления.дог_СпособыНачисленияПени.ПроцентомЗаКаждыйДеньПросрочки 
		И ТекДанные.ВидОплатыОрг + ТекДанные.КоличествоДнейПросрочки*86400<ТекДанные.ДатаПлатежа Тогда
		ДниПросрочки = (ТекДанные.ДатаПлатежа - (ТекДанные.ВидОплатыОрг + ТекДанные.КоличествоДнейПросрочки*86400))/86400;
		СуммаП = ТекДанные.СтавкаПени*Мин(ТекДанные.КоличествоДнейНачисленияПени,ДниПросрочки)*ТекДанные.СуммаДляРасчета/100;
	Иначе
		СуммаП = 0;
	КонецЕсли;
	ТекДанные.СуммаПени = СуммаП;
	ТекДанные.СуммаЗаявки = ТекДанные.СуммаДляРасчета + СуммаП;
		
