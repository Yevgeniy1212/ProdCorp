
&НаСервере
Процедура ПриСозданииНаСервере(Отказ, СтандартнаяОбработка)
	Компонент = Неопределено;
	Если НЕ Параметры.Свойство("Компонент",Компонент) Тогда
		Отказ = Истина;
		Возврат;
	КонецЕсли;
	Если Перечисления.ТипВсеСсылки().СодержитТип(ТипЗнч(Компонент)) Тогда
		ИмяМакета = фин_ОбщегоНазначенияСервер.ПолучитьИмяЭлементаПеречисленияПоЗначению(Компонент);
	Иначе
		ИмяМакета = Компонент.ИмяПредопределенныхДанных;
	КонецЕсли;
	Попытка
		ПолеСправки = Обработки.фин_НастройкаКомплектаБюджетов.ПолучитьМакет(ИмяМакета).ПолучитьТекст();
	Исключение
		
	КонецПопытки;
КонецПроцедуры
