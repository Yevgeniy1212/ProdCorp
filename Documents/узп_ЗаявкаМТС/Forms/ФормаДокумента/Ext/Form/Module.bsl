		//НС.ЕдиницаИзмерения = ПолучитьСвойство(НС.Номенклатура, "ПлановаяЕдиницаИзмерения");
		НС.Коэффициент = 1;
		//узп_УправлениеЗакупками.УстановитьИконкуТипаНоменклатуры(Объект, "Товары");
		ТоварыПриИзменении(Элемент);
		УправлениеФормой(ЭтаФорма);
	КонецЕсли;
КонецПроцедуры

