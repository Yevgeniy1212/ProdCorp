// Выполняет автоматическое заполнение документа по данным документа и переданным параметрам
// 
// Параметры: 
//  ПостроительЗапроса - построитель запроса, который используется для ограничения состава физлиц
//                       по которым выполняется заполнение документа
//
// Возвращаемое значение:
//  Логическое - удалось ли выполнить автоматическое заполнение документа
//
Функция Автозаполнение(ПостроительЗапроса = НеОпределено) Экспорт

	Начисления.Очистить();
		
	Возврат ВыполнитьАвтозаполнение(ПостроительЗапроса);
	
КонецФункции // Автозаполнение()

// Выполняет автоматическое заполнение документа по данным документа и переданным параметрам
// 
// Параметры: 
//  нет
//
// Возвращаемое значение:
//  Логическое - удалось ли выполнить автоматическое заполнение документа
//
Функция ВыполнитьАвтозаполнение(ПостроительЗапроса = Неопределено) Экспорт

	СписокСотруниковТекст = "";	

	Если ПостроительЗапроса = Неопределено Тогда 

		Запрос = Новый Запрос;
		Запрос.МенеджерВременныхТаблиц = Новый МенеджерВременныхТаблиц;
		
		// Установим параметры запроса
		Запрос.УстановитьПараметр("парамНачало" , ПериодРегистрации);
		Запрос.УстановитьПараметр("парамКонец" , КонецМесяца(ПериодРегистрации));

	Иначе

		ПостроительЗапроса.Параметры.Вставить("парамНачало" , ПериодРегистрации);
		ПостроительЗапроса.Параметры.Вставить("парамКонец" , КонецМесяца(ПериодРегистрации));
		
		Запрос = ПостроительЗапроса.ПолучитьЗапрос();
		Запрос.МенеджерВременныхТаблиц = Новый МенеджерВременныхТаблиц;
		
		СписокСотруниковТекст = Запрос.Текст;
		СписокСотруниковТекст = СтрЗаменить(СписокСотруниковТекст,"РАЗРЕШЕННЫЕ","");
		СписокСотруниковТекст = Лев(СписокСотруниковТекст, Найти(СписокСотруниковТекст,"УПОРЯДОЧИТЬ") - 1);
		
		Запрос.Текст = "
		|ВЫБРАТЬ РАЗЛИЧНЫЕ РАЗРЕШЕННЫЕ
		|	СписокСотрудников.Сотрудник,
		|	СписокСотрудников.Сотрудник.ФизЛицо КАК ФизЛицо
		|ПОМЕСТИТЬ ВТСписокСотрудников
		|ИЗ
		|	(" + СписокСотруниковТекст + ") КАК СписокСотрудников
		|
		|ИНДЕКСИРОВАТЬ ПО
		|	СписокСотрудников.Сотрудник,
		|	СписокСотрудников.Сотрудник.ФизЛицо";
		
		Запрос.Выполнить();
		СписокСотруниковТекст = "ВТСписокСотрудников";
		
	КонецЕсли;
	
	// Прочие параметры запроса
	
	Запрос.УстановитьПараметр("парамОрганизация" , Организация);
	Запрос.УстановитьПараметр("парамГоловнаяОрганизация" , ОбщегоНазначения.ГоловнаяОрганизация(Организация));
	Запрос.УстановитьПараметр("Уволен", Перечисления.ПричиныИзмененияСостояния.Увольнение);
	
	МассивПраздники = Новый Массив;
	МассивПраздники.Добавить(Перечисления.ВидыДнейПроизводственногоКалендаря.Праздник);
	МассивПраздники.Добавить(Перечисления.ВидыДнейПроизводственногоКалендаря.ДополнительныйВыходной);

	Запрос.УстановитьПараметр("Праздники", МассивПраздники);
	Запрос.УстановитьПараметр("ТипПоказателяТарифныйРазряд", Перечисления.ТипыПоказателейСхемМотивации.ТарифныйРазряд);
	
	Запрос.УстановитьПараметр("ОтработанноеВПределахНормы", Перечисления.ВидыВремени.ОтработанноеВПределахНормы);
	Запрос.УстановитьПараметр("ЧасовоеНеотработанное", Перечисления.ВидыВремени.ЧасовоеНеотработанное);
	Запрос.УстановитьПараметр("ЦелодневноеНеотработанное", Перечисления.ВидыВремени.ЦелодневноеНеотработанное);
	Запрос.УстановитьПараметр("ПустаяВалюта", Справочники.Валюты.ПустаяСсылка());
	Запрос.УстановитьПараметр("ВалютаРеглУчета", мВалютаРегламентированногоУчета);
	Запрос.УстановитьПараметр("ПоЧасам", Перечисления.ВидыУчетаВремени.ПоЧасам);
	
	МассивВидыОплатыПраздничных = Новый Массив;
	МассивВидыОплатыПраздничных.Добавить(ПланыВидовРасчета.ОсновныеНачисленияОрганизаций.ОплатаПраздничныхИВыходных);
	МассивВидыОплатыПраздничных.Добавить(ПланыВидовРасчета.ОсновныеНачисленияОрганизаций.ДоплатаЗаПраздничныеИВыходные);
	Запрос.УстановитьПараметр("ВидыОплатыПраздничных", МассивВидыОплатыПраздничных);
	
	Запрос.УстановитьПараметр("ТекущийДокумент", Ссылка);
	
	ПраздничныеДатыТекст = "
	|ВЫБРАТЬ
	|	РегламентированныйПроизводственныйКалендарь.ДатаКалендаря КАК ДатаКалендаря
	|ПОМЕСТИТЬ ВТПраздничныеДаты
	|ИЗ
	|	РегистрСведений.РегламентированныйПроизводственныйКалендарь КАК РегламентированныйПроизводственныйКалендарь
	|ГДЕ
	|	РегламентированныйПроизводственныйКалендарь.ВидДня В (&Праздники)
	|	И РегламентированныйПроизводственныйКалендарь.ДатаКалендаря МЕЖДУ &парамНачало И &парамКонец";
	
	Запрос.Текст = ПраздничныеДатыТекст;
	Запрос.Выполнить();
	
	ПраздничныеДатыТекст = "ВТПраздничныеДаты";
	
	//СписокРаботниковТекст
	//Описание:
	//	Выбирает список работников, работавших в праздничные дни
	СписокРаботниковТекст = "
	|ВЫБРАТЬ РАЗРЕШЕННЫЕ
	|	ПраздничныеДаты.ДатаКалендаря,
	|	РаботникиОрганизации.Сотрудник,
	|	РаботникиОрганизации.Сотрудник.ФизЛицо КАК ФизЛицо,
	|	РаботникиОрганизации.ПодразделениеОрганизации,
	|	РаботникиОрганизации.Должность,
	|	РаботникиОрганизации.ГрафикРаботы
	|ПОМЕСТИТЬ ВТСписокРаботников
	|ИЗ
	|	(ВЫБРАТЬ
	|		ПраздничныеДаты.ДатаКалендаря,
	|		РаботникиОрганизации.Сотрудник,
	|		МАКСИМУМ(РаботникиОрганизации.Период) КАК ПериодНазначения
	|	ИЗ
	|		" + ПраздничныеДатыТекст + " КАК ПраздничныеДаты
	|
	|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ РегистрСведений.РаботникиОрганизаций КАК РаботникиОрганизации
	|			ПО РаботникиОрганизации.Организация = &парамГоловнаяОрганизация
	|				И РаботникиОрганизации.Период <= ПраздничныеДаты.ДатаКалендаря
	|
	|       " + ?(СписокСотруниковТекст <> "", "
	|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ " + СписокСотруниковТекст + " КАК СписокСотрудников
	|			ПО РаботникиОрганизации.Сотрудник = СписокСотрудников.Сотрудник", "") + "
	|	СГРУППИРОВАТЬ ПО
	|		ПраздничныеДаты.ДатаКалендаря,
	|		РаботникиОрганизации.Сотрудник) КАК ПраздничныеДаты
	|
	|	ВНУТРЕННЕЕ СОЕДИНЕНИЕ РегистрСведений.РаботникиОрганизаций КАК РаботникиОрганизации
	|		ПО ПраздничныеДаты.Сотрудник = РаботникиОрганизации.Сотрудник
	|			И ПраздничныеДаты.ПериодНазначения = РаботникиОрганизации.Период
	|			И РаботникиОрганизации.Организация = &парамГоловнаяОрганизация
	|
	|	// по зарегистрированным начислениям отсечем неявки 
	|	ЛЕВОЕ СОЕДИНЕНИЕ (ВЫБРАТЬ
	|							ПраздничныеДаты.ДатаКалендаря,
	|							ОсновныеНачисления.Сотрудник,
	|							ВЫБОР
	|								КОГДА СУММА(ВЫБОР КОГДА ОсновныеНачисления.Сторно ТОГДА -1 ИНАЧЕ 1 КОНЕЦ) = 0 
	|									ТОГДА ЛОЖЬ
	|								ИНАЧЕ ИСТИНА
	|							КОНЕЦ КАК Неявка
	|						ИЗ
	|							РегистрРасчета.ОсновныеНачисленияРаботниковОрганизаций.ФактическийПериодДействия(
	|										Организация = &парамГоловнаяОрганизация
	|										И ПериодДействия = &парамНачало
	|										И ВидРасчета.ОбозначениеВТабелеУчетаРабочегоВремени.ВидВремени = &ЦелодневноеНеотработанное
	|										" + ?(СписокСотруниковТекст <> "", " И (Сотрудник) В (ВЫБРАТЬ Сотрудник ИЗ " + СписокСотруниковТекст + " КАК СписокСотрудников)", "") + ") КАК ОсновныеНачисления
	|	
	|							ВНУТРЕННЕЕ СОЕДИНЕНИЕ " + ПраздничныеДатыТекст + " КАК ПраздничныеДаты
	|								ПО ПраздничныеДаты.ДатаКалендаря МЕЖДУ ОсновныеНачисления.ПериодДействияНачало И ОсновныеНачисления.ПериодДействияКонец 
	|
	|						СГРУППИРОВАТЬ ПО
	|							ПраздничныеДаты.ДатаКалендаря,
	|							ОсновныеНачисления.Сотрудник) КАК ЗарегистрированныеНеявки
	|		ПО ПраздничныеДаты.ДатаКалендаря = ЗарегистрированныеНеявки.ДатаКалендаря
	|			И ПраздничныеДаты.Сотрудник = ЗарегистрированныеНеявки.Сотрудник
	|			И ЗарегистрированныеНеявки.Неявка = ИСТИНА
	|
	|	// для предотвращения дублирования проверим уже начисленные оплаты за праздничные
	|	ЛЕВОЕ СОЕДИНЕНИЕ РегистрРасчета.ОсновныеНачисленияРаботниковОрганизаций КАК ОсновныеНачисления
	|		ПО ПраздничныеДаты.Сотрудник = ОсновныеНачисления.Сотрудник
	|			И ОсновныеНачисления.Организация = &парамГоловнаяОрганизация
	|			И ОсновныеНачисления.ВидРасчета В (&ВидыОплатыПраздничных)
	|			И ПраздничныеДаты.ДатаКалендаря = ОсновныеНачисления.ПериодДействияНачало 
	|			И ОсновныеНачисления.Регистратор <> &ТекущийДокумент
	|
	|ГДЕ
	|	РаботникиОрганизации.ПричинаИзмененияСостояния <> &Уволен
	|	И РаботникиОрганизации.ОбособленноеПодразделение = &парамОрганизация
	|	И (ЗарегистрированныеНеявки.Сотрудник ЕСТЬ NULL)
	|	И (ОсновныеНачисления.Сотрудник ЕСТЬ NULL)
	|
	|ИНДЕКСИРОВАТЬ ПО
	|	РаботникиОрганизации.Сотрудник";
	
    Запрос.Текст = СписокРаботниковТекст;
    Запрос.Выполнить();
    
    СписокРаботниковТекст = "ВТСписокРаботников"; 
	
	ОсновнойТекстЗапроса = 
	"ВЫБРАТЬ РАЗЛИЧНЫЕ
	|	ОсновныеНачисленияОрганизаций.Ссылка КАК ВидРасчета,
	|	Показатели1.Показатель.ТипПоказателя КАК Показатель1ТипПоказателя
	|ПОМЕСТИТЬ ВТ_Показатели
	|ИЗ
	|	ПланВидовРасчета.ОсновныеНачисленияОрганизаций КАК ОсновныеНачисленияОрганизаций
	|		ЛЕВОЕ СОЕДИНЕНИЕ ПланВидовРасчета.ОсновныеНачисленияОрганизаций.Показатели КАК Показатели1
	|		ПО (Показатели1.НомерСтроки = 1)
	|			И ОсновныеНачисленияОрганизаций.Ссылка = Показатели1.Ссылка
	|;
	|
	|ВЫБРАТЬ РАЗРЕШЕННЫЕ
	|	СписокРаботников.Сотрудник,
	|	ИСТИНА КАК Авторасчет,
	|	СписокРаботников.ФизЛицо,
	|	СписокРаботников.ПодразделениеОрганизации,
	|	СписокРаботников.ДатаКалендаря КАК ДатаВыхода,
	|	ВЫБОР
	|		КОГДА ПлановыеНачисления.ПериодЗавершения <> ДАТАВРЕМЯ(1, 1, 1)
	|				И ПлановыеНачисления.ПериодЗавершения < СписокРаботников.ДатаКалендаря
	|			ТОГДА ВЫБОР
	|					КОГДА ЕСТЬNULL(ПлановыеНачисления.ВидРасчетаЗавершения.ТребуетВводаТарифногоРазряда, ЛОЖЬ)
	|							И ПоказателиОсновныхНачисленийЗавершения.Показатель1ТипПоказателя = &ТипПоказателяТарифныйРазряд
	|						ТОГДА ЕСТЬNULL(РазмерТарифныхСтавок.Размер, 0)
	|					ИНАЧЕ ЕСТЬNULL(ПлановыеНачисления.Показатель1Завершения, 0)
	|				КОНЕЦ
	|		ИНАЧЕ ВЫБОР
	|				КОГДА ЕСТЬNULL(ПлановыеНачисления.ВидРасчета.ТребуетВводаТарифногоРазряда, ЛОЖЬ)
	|						ИЛИ ПоказателиОсновныхНачислений.Показатель1ТипПоказателя = &ТипПоказателяТарифныйРазряд
	|					ТОГДА ЕСТЬNULL(РазмерТарифныхСтавок.Размер, 0)
	|				ИНАЧЕ ЕСТЬNULL(ПлановыеНачисления.Показатель1, 0)
	|			КОНЕЦ
	|	КОНЕЦ * ВЫБОР
	|				КОГДА КурсыВалют.Валюта В (&ПустаяВалюта, &ВалютаРеглУчета)
	|					ТОГДА 1
	|				ИНАЧЕ ЕСТЬNULL(КурсыВалют.Курс / КурсыВалют.Кратность, 1)
	|			КОНЕЦ КАК ОкладТариф,
	|	ВЫБОР
