ВЫБРАТЬ
	ВТ.Счет КАК Счет,
	ВТ.Регистратор КАК Регистратор,
	ВТ.Контрагент КАК Контрагент,
	ВТ.ДоговорКонтрагента КАК ДоговорКонтрагента,
	ВТ.ПереоценкаДт КАК ПереоценкаДт,
	ВТ.ПереоценкаКт КАК ПереоценкаКт,
	ВТ.Валюта КАК Валюта,
	ВТ.Приход КАК Приход,
	ВТ.ПриходВалюта КАК ПриходВалюта,
	ВТ.Расход КАК Расход,
	ВТ.РасходВалюта КАК РасходВалюта,
	ВТ.Организация КАК Организация,
	МАКСИМУМ(ВТ.НачОстаток) КАК НачОстаток,
	МАКСИМУМ(ВТ.НачОстатокВалюта) КАК НачОстатокВалюта,
	МАКСИМУМ(ВТ.КонОстаток) КАК КонОстаток,
	МАКСИМУМ(ВТ.КонОстатокВалюта) КАК КонОстатокВалюта,
	ВТ.НомерСтроки КАК НомерСтроки
{ВЫБРАТЬ
	Счет.*,
	Регистратор.*,
	Контрагент.*,
	ДоговорКонтрагента.*,
	Валюта.*,
	Приход,
	ПриходВалюта,
	Расход,
	РасходВалюта,
	Организация.*,
	НачОстаток,
	НачОстатокВалюта,
	КонОстаток,
	КонОстатокВалюта,
	ПереоценкаДт,
	ПереоценкаКт}
ИЗ
	ВТ КАК ВТ
{ГДЕ
	ВТ.Счет.*,
	ВТ.Регистратор.*,
	ВТ.Контрагент.*,
	ВТ.ДоговорКонтрагента.*,
	ВТ.Валюта.*,
	ВТ.Приход,
	ВТ.ПриходВалюта,
	ВТ.Расход,
	ВТ.РасходВалюта,
	ВТ.Организация.*,
	ВТ.НачОстаток,
	ВТ.НачОстатокВалюта,
	ВТ.КонОстаток,
	ВТ.КонОстатокВалюта,
	ВТ.ПереоценкаДт,
	ВТ.ПереоценкаКт}

СГРУППИРОВАТЬ ПО
	ВТ.Счет,
	ВТ.Регистратор,
	ВТ.Контрагент,
	ВТ.ДоговорКонтрагента,
	ВТ.Валюта,
	ВТ.Организация,
	ВТ.ПереоценкаДт,
	ВТ.ПереоценкаКт,
	ВТ.Приход,
	ВТ.ПриходВалюта,
	ВТ.Расход,
	ВТ.РасходВалюта,
	ВТ.НомерСтроки</query>
