	СписокСчетовДХ = Новый Массив;
	СписокСчетовДХ.Добавить(ПланыСчетов.Типовой.ДоходыОтКурсовойРазницы);
	
	СписокСчетовРХ = Новый Массив;
	СписокСчетовРХ.Добавить(ПланыСчетов.Типовой.РасходыПоКурсовойРазнице);
	
	мВидыСубконто1 = Новый Массив;
	мВидыСубконто1.Добавить(ПланыВидовХарактеристик.ВидыСубконтоТиповые.Контрагенты);
	
	мВидыСубконто2 = Новый Массив;
	мВидыСубконто2.Добавить(ПланыВидовХарактеристик.ВидыСубконтоТиповые.ДенежныеСредства);
	
	мВидыСубконто3 = Новый Массив;
	мВидыСубконто3.Добавить(ПланыВидовХарактеристик.ВидыСубконтоТиповые.РаботникиОрганизаций);
	
	СписокСчетовПрочие = СформироватьСписокСчетов();
	
	Если ЗначениеЗаполнено(НачалоПериода) Тогда
		ТиповыеОтчеты.УстановитьПараметр(КомпоновщикНастроек, "НачалоПериода", НачалоДня(НачалоПериода));
	Иначе
		ТиповыеОтчеты.УстановитьПараметр(КомпоновщикНастроек, "НачалоПериода", Дата(1, 1, 1));
	КонецЕсли;
	Если ЗначениеЗаполнено(КонецПериода) Тогда
		ТиповыеОтчеты.УстановитьПараметр(КомпоновщикНастроек, "КонецПериода", КонецДня(КонецПериода));
	Иначе
		ТиповыеОтчеты.УстановитьПараметр(КомпоновщикНастроек, "КонецПериода", Дата(3999, 11, 1));
	КонецЕсли;
	
	Если мДеревоСтруктурныхЕдиниц.Колонки.Количество() = 0 Тогда 
		
		СписокСтруктурныхЕдиниц = Новый СписокЗначений;
		СписокСтруктурныхЕдиниц.ЗагрузитьЗначения(мСписокСтруктурныхЕдиниц.ВыгрузитьЗначения());
		
		Для Каждого СтрПодразделение Из мСписокПодразделений Цикл 
			СписокСтруктурныхЕдиниц.Добавить(СтрПодразделение.Значение);
		КонецЦикла;		
				
		мДеревоСтруктурныхЕдиниц = СтандартныеОтчеты.СформироватьДеревоСЕ(, СписокСтруктурныхЕдиниц);
		
	КонецЕсли;
	
	ТиповыеОтчеты.УстановитьПараметр(КомпоновщикНастроек, "СписокСчетов", СписокСчетов);
	ТиповыеОтчеты.УстановитьПараметр(КомпоновщикНастроек, "СписокСчетовДХ", СписокСчетовДХ);
	ТиповыеОтчеты.УстановитьПараметр(КомпоновщикНастроек, "СписокСчетовРХ", СписокСчетовРХ);
	ТиповыеОтчеты.УстановитьПараметр(КомпоновщикНастроек, "СписокСчетовПрочие", СписокСчетовПрочие);
	
	ТиповыеОтчеты.УстановитьПараметр(КомпоновщикНастроек, "мВидыСубконто1", мВидыСубконто1);
	ТиповыеОтчеты.УстановитьПараметр(КомпоновщикНастроек, "мВидыСубконто2", мВидыСубконто2);
	ТиповыеОтчеты.УстановитьПараметр(КомпоновщикНастроек, "мВидыСубконто3", мВидыСубконто3);
	
	ТиповыеОтчеты.УстановитьПараметр(КомпоновщикНастроек, "мВалютаРегламентированногоУчета", мВалютаРегламентированногоУчета);
	
	ТиповыеОтчеты.ДобавитьОтборПоОрганизациямИПодразделениям(КомпоновщикНастроек, мДеревоСтруктурныхЕдиниц);
	
	
