
Процедура ПередЗаписью(Отказ)
	Если ОбменДанными.Загрузка=Истина Тогда
		Возврат;
	КонецЕсли;
	Если НЕ ЭтоГруппа Тогда
		ОписаниеТипа = Новый ОписаниеТипов("Неопределено");
		Если ЗначениеЗаполнено(ТипПоказателя) И ИмяОбъекта<>"" Тогда
			Если ТипПоказателя = Перечисления.фин_ТипыВходящихПоказателейБюджетирования.Справочник Тогда
				База = "СправочникСсылка";
			ИначеЕсли ТипПоказателя = Перечисления.фин_ТипыВходящихПоказателейБюджетирования.Перечисление Тогда
				База = "ПеречислениеСсылка";
			ИначеЕсли ТипПоказателя = Перечисления.фин_ТипыВходящихПоказателейБюджетирования.ПланСчетов Тогда
				База = "ПланСчетовСсылка";
			ИначеЕсли ТипПоказателя = Перечисления.фин_ТипыВходящихПоказателейБюджетирования.ПланВидовРасчета Тогда
				База = "ПланВидовРасчетаСсылка";
			КонецЕсли;
			Если Метаданные.НайтиПоПолномуИмени(СтрЗаменить(База,"Ссылка","")+"."+ИмяОбъекта)<>Неопределено Тогда
				ОписаниеТипа = Новый ОписаниеТипов(База+"."+ИмяОбъекта);
			Иначе
				ОписаниеТипа = Новый ОписаниеТипов("Неопределено");
			КонецЕсли;
		КонецЕсли;
		СсылкаЭкземпляра = ОписаниеТипа.ПривестиЗначение(Неопределено);
	КонецЕсли;
КонецПроцедуры
